<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(orders.lenght <= 0){ %>
        <h1>No orders yet!</h1>
        <% } else { %>
        <h1>List of orders</h1>
        <ul>
            <% orders.forEach(order =>{  %>
            <li>
                <h2>
                    # <%= order.id %>
                </h2>
                <ul>
                    <li><%= order.createdAt.toLocaleString('pl-PL') %></li>
                </ul>
            </li>
            <% }) %>
        </ul>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>