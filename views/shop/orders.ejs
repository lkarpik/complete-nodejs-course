<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(orders.lenght <= 0){ %>
        <h1>No orders yet!</h1>
        <% } else { %>
        <h1>List of orders</h1>
        <ul>
            <% orders.forEach(order =>{  %>
            <li>
                <h2>
                    # <%= order.id %>
                </h2>
                <p>Created at: <%= order.createdAt.toLocaleString('pl-PL') %></p>
                <ul>
                    <% order.products.forEach(item =>{ %>
                    <li><%= item.title %> [<%= item.orderItem.quantity %>]</li>
                    <% }) %>
                </ul>
            </li>
            <% }) %>
        </ul>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>